<launch>

    <arg name="namespace" default="Sauron" />

    <!-- Simulation always sends thrust of 0.0 to the drone -->
    <group ns="$(arg namespace)">
        <include file="$(find px4_control)/launch/intel_aero_group.launch"> 
            <arg name="namespace" value="$(arg namespace)" />
            <arg name="maxThrust" value="0.0" />
        </include>
    </group>

    <node name="sauron_joy" pkg="topic_tools" type="relay"
            args="/joy /$(arg namespace)/joy" />

    <!-- Launch RVIZ -->
    <!-- <node pkg="rviz" type="rviz" name="rviz" 
            args="-d $(find px4_control)/Extras/$(arg namespace).rviz"/> -->
</launch>